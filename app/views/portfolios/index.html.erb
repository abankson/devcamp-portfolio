<h1>Portfolio Items</h1>

<%= link_to "Create New Item", new_portfolio_path %>

<% @portfolioItems.each do |item| %> 
  <h3><%= link_to item.title, portfolio_singular_path(item) %></h3> 
  <p><%= item.subtitle %></p> 
  <p><%= item.body %></p>
  <%= image_tag item.thumbImage unless item.thumbImage.nil? %>
  <p><%= link_to "Edit", edit_portfolio_path(item) %>
  <%= link_to "Delete Portfolio Item", portfolio_path(item), method: :delete, data: { confirm: "Are you sure?" } %></p>
<% end %>